@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var showExistingBaseStations = ViewBag.ShowExistingBaseStations;
}

<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
<nav class="navbar navbar-dark navbar-expand-sm" style="background-color: #22272e">
    <a class="navbar-brand" style="margin-top: 5px">
        <img src="Images/logo.png" width="50" height="50" alt="">
    </a>
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" style="color: #abdde5" asp-controller="Home" asp-action="Index">
                Home
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" style="color: #abdde5" asp-controller="Configuration" asp-action="Configuration">
                Configuration
            </a>
        </li>
        <li class="nav-item">
            @if (showExistingBaseStations)
            {
                <a class="nav-link" style="color: #abdde5" asp-controller="Home" asp-action="ChangeExistingBaseStationsVisibility">
                    Hide existing base stations
                </a>
            }
            else
            {
                <a class="nav-link" style="color: #abdde5" asp-controller="Home" asp-action="ChangeExistingBaseStationsVisibility">
                    Show existing base stations
                </a>
            }
        </li>
    </ul>
</nav>

@RenderBody()
</body>